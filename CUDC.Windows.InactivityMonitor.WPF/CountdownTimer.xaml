<UserControl x:Class="CUDC.Windows.InactivityMonitor.WPF.CountdownTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUDC.Windows.InactivityMonitor.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel>
        <TextBlock Text="Application will shutdown in..."/>
        <TextBlock x:Name="txtBlk" VerticalAlignment="Center" 
                   TextAlignment="Center" FontWeight="Bold" 
                   Foreground="Red" FontSize="28" Padding="10" 
                   FontFamily="Segoe UI Light"/>
    </StackPanel>
</UserControl>
